@page "/"
@using ToDoApp.Web.Components.TaskCardComponents
@inject TodoService TodoService
@attribute [StreamRendering]

<div>
    <h3>Lista de Tarefas</h3>
    <br />

    @if (todos is null)
    {
        <span>Carregando ...</span>
    }
    else
    {
        @foreach (var todo in todos)
        {
            <TaskCard Todo="@todo" />
        }
    }
</div>